    <script>
        // Function to add the recent 12 previous months
        function addRecentMonths() {
            const months = ["January", "February", "March", "April", "May", "June", 
                            "July", "August", "September", "October", "November", "December"];
            const archivesList = document.getElementById('archives-list');
            const currentDate = new Date();
            let currentMonth = currentDate.getMonth();
            let currentYear = currentDate.getFullYear();

            for (let i = 0; i < 12; i++) {
                // Create list item
                const listItem = document.createElement('li');
                const linkItem = document.createElement('a');
                linkItem.href = `/archives/${months[currentMonth]}${currentYear}`;
                linkItem.textContent = `${months[currentMonth]} ${currentYear}`;

                listItem.appendChild(linkItem);
                archivesList.appendChild(listItem);

                // Move to the previous month
                currentMonth--;
                if (currentMonth < 0) {
                    currentMonth = 11; // December
                    currentYear--; // Decrease year
                }
            }
        }

        // Call the function to add the months when the script loads
        addRecentMonths();
    </script>

