    $(".like-button").click(function() {
      var button = $(this);
      var postId = button.data("post-id");
      var liked = button.data("liked");

      var url = liked ? "/posts/" + postId + "/unlike" : "/posts/" + postId + "/like";

      $.ajax({
        url: url,
        type: "POST",
        success: function(response) {
          // Toggle the button state
